<div class="row">
  <div class="col-sm-9 no-right-padding">
    <table class="table table-bordered table-hover">
      
      <thead>

        <tr>
          <th scope="col">Email</th>
          <th scope="col">Name</th>
          <th scope="col">Actions</th>
        </tr>
        
      </thead>

      <tbody>

        <% @tracked_users.each do |friend| %>
          <tr>
            <td scope="row"><%= friend.email %></td>
            <td scope="row"><%= friend.full_name %></td>
            <td>
              <%= link_to 'Stop following', friendship_path(friend), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-warning" %>
              <%= link_to 'Show profile', user_path(friend), class: "btn btn-sm btn-info" %>
            </td>
          </tr>
        <% end %>

      </tbody>

    </table>
  </div>
</div>